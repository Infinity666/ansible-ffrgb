---

{{ domain }}:
- path: /etc/nginx/ssl/{{ domain }}.crt
  user: root
  group: root
  perm: '400'
  format: crt,ca
  action: '/usr/sbin/service nginx restart'
- path: /etc/nginx/ssl/{{ domain }}.key
  user: root
  group: root
  perm: '400'
  format: key
  action: '/usr/sbin/service nginx restart'
