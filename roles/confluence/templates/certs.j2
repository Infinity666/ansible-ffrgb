---

{{ confluence_domain }}:
- path: /etc/nginx/ssl/{{ confluence_domain }}.key
  user: root
  group: root
  perm: '400'
  format: key
  action: 'service nginx restart'
- path: /etc/nginx/ssl/{{ confluence_domain }}.crt
  user: root
  group: root
  perm: '400'
  format: crt,ca
  action: 'service nginx restart'
